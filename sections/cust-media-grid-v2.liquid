<style>
  #shopify-section-{{ section.id }} {
    --media-grid-row-height: {{ section.settings.mobile_row_height }}px;
  }

  @media screen and (min-width: 700px) {
    #shopify-section-{{ section.id }} {
      --media-grid-row-height: {{ section.settings.desktop_row_height }}px;
    }
  }

  {%- for block in section.blocks -%}
    #media-grid-{{ block.id }} {
      --content-over-media-overlay: {{ block.settings.overlay_color.rgb }} /{{ block.settings.overlay_opacity | divided_by: 100.0 }};
      {%- if block.settings.heading_tag == 'h5' or block.settings.heading_tag == 'h6' -%}
        --content-over-media-gap: 32px;
      {%- endif -%}
    }

    {%- if block.settings.heading_tag == 'h5' or block.settings.heading_tag == 'h6' -%}
      @media screen and (min-width: 740px) {
        #media-grid-{{ block.id }} {
          --content-over-media-gap: 10px;
        }
    {%- endif -%}
  {%- endfor -%}

  {% for block in section.blocks %}
    .cust-media-grid #media-grid-item-{{ block.id }} {
        --media-grid-column-span: {{ block.settings.desktop_column_span }}; 
        --media-grid-row-span: {{ block.settings.desktop_row_span }}
    }
  @media (max-width: 699px) {
    .cust-media-grid #media-grid-item-{{ block.id }} {
      order: {{ block.settings.mobile_order }};
      --media-grid-column-span: {{ block.settings.mobile_column_span }}; 
        --media-grid-row-span: {{ block.settings.mobile_row_span }}
    }
  }
  {% endfor %}
    {% if section.settings.blocks.size < 6 %}
        .cust-media-grid .media-grid {
          gap: 40px;
      }
    {% endif %}}
</style>

{%- comment -%}
------------------------------------------------------------------------------------------------------------------------
LIQUID
------------------------------------------------------------------------------------------------------------------------
{%- endcomment -%}

<div {% render 'section-properties', narrow: section.settings.reduce_width %} id="{{ section.settings.target_section }}">
  {% if section.settings.cust_media_grid_subheading != blank or section.settings.cust_media_grid_headding != blank %}
  <div class="cust-media-grid__header">
      {% if section.settings.cust_media_grid_subheading != blank %}
        <span class="cust-media-grid-subheadding">{{ section.settings.cust_media_grid_subheading }}</span>
      {% endif %}
      {% if section.settings.cust_media_grid_headding != blank %}
      <h2 class="cust-media-grid-headding">{{ section.settings.cust_media_grid_headding }}</h2>
      {% endif %}
      {% if section.settings.cust_media_grid_content != blank %}
          <div class="cust-media-grid-content">{{ section.settings.cust_media_grid_content }}</div>
      {% endif %}
  </div>
  {% endif %}
  
  <media-grid class="media-grid">
    {%- for block in section.blocks -%}
      <a id="media-grid-item-{{ block.id }}" {% if block.settings.link_url != blank %}href="{{ block.settings.link_url }}"{% endif %} class="media-grid__item shadow group" reveal-js style="" {{ block.shopify_attributes }}>
        <div id="media-grid-{{ block.id }}" {% render 'surface', class: 'content-over-media rounded', background: block.settings.background, background_gradient: block.settings.background_gradient, text_color: block.settings.text_color %}>
          {%- liquid
            assign loading_strategy = nil
  
            if section.index > 3 or forloop.index > 3
              assign loading_strategy = 'lazy'
            endif
          -%}
          
          {%- case block.type -%}
            {%- when 'image' -%}
              {%- if block.settings.image -%}
                {%- capture sizes -%}(max-width: 699px) 100vw, min({{ 390 | times: block.settings.desktop_column_span }}px, {{ 25 | times: block.settings.desktop_column_span }}vw){%- endcapture -%}
                {{- block.settings.image | image_url: width: block.settings.image.width | image_tag: loading: loading_strategy, sizes: sizes, widths: '200,300,400,500,600,700,800,1000,1200,1400,1600,1800,2000,2200,2400', class: 'content-over-media__media zoom-image', style: 'width:100%;height:100%;object-fit:cover;object-position:center;' -}}
              {%- endif -%}

            {%- when 'video' -%}
              {%- if block.settings.video -%}
                <video-media autoplay style="--aspect-ratio: auto">
                  {%- if block.settings.show_video_controls -%}
                    {%- assign loop_video = false -%}
                  {%- else -%}
                    {%- assign loop_video = true -%}
                  {%- endif -%}

                  {{- block.settings.video | video_tag: playsinline: true, muted: true, loop: loop_video, controls: block.settings.show_video_controls, preload: 'metadata', class: 'object-fill' -}}
                </video-media>
              {%- else -%}
                <video-media host="{{ block.settings.external_video_url.type }}" autoplay style="--aspect-ratio: auto">
                  <template>
                    {%- if block.settings.external_video_url.type == 'youtube' -%}
                      <iframe src="https://www.youtube.com/embed/{{ block.settings.external_video_url.id }}?playsinline=1&autoplay=1&controls=0&mute=1&loop=1&playlist={{ block.settings.external_video_url.id }}&enablejsapi=1&rel=0&modestbranding=1&origin={{ 'https://' | append: request.host | url_encode }}" allow="autoplay; encrypted-media" allowfullscreen="allowfullscreen"></iframe>
                    {%- elsif block.settings.external_video_url.type == 'vimeo' -%}
                      <iframe src="https://player.vimeo.com/video/{{ block.settings.external_video_url.id }}?autoplay=1&autopause=1&background=1&loop=1&muted=1&transparent=0&responsive=1&portrait=0&title=0&byline=0&color={{ settings.text_color | remove_first: '#' }}" allow="autoplay; encrypted-media;" allowfullscreen="allowfullscreen"></iframe>
                    {%- endif -%}
                  </template>
                </video-media>
              {%- endif -%}
          {%- endcase -%}

          {%- if block.settings.title != blank or block.settings.link_text != blank -%}
            <div class="{{ block.settings.mobile_text_position }} {{ block.settings.desktop_text_position }}">
              <div class="prose">
                {%- if block.settings.title != blank -%}
                  {% comment %}
                    {{ block.settings.heading_tag }}
                  {% endcomment %}
                  <p class="cust-media-grid-item__heading">
                    {% render 'styled-text', content: block.settings.title, gradient: block.settings.text_gradient %}
                  </p>
                {%- endif -%}

                {%- if block.settings.description_text != blank -%}
                  <p class="cust-media-grid-item__description">{{ block.settings.description_text }}</p>
                {%- endif -%}
              </div>
            </div>
          {%- endif -%}
        </div>
      </a>
    {%- endfor -%}
  </media-grid>
</div>
<script>
document.addEventListener('DOMContentLoaded', () => {
    const grids = document.querySelectorAll('.cust-media-grid .media-grid');
    const handleGrid = (grid) => {
        const childCount = grid.children.length;
        if (childCount < 6) {
            grid.classList.add('gap-40');
        } else {
            grid.classList.remove('gap-40');
        }
    };
    grids.forEach(handleGrid);
});

</script>
