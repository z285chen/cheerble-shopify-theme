{%- render 'section-spacing-collapsing' -%}

{%- assign text_position = section.settings.text_position -%}

<style>
  #shopify-section-{{ section.id }} {
    --section-stack-intro: {% if text_position == 'center' %}60%{% else %}50%{% endif %};
    --section-stack-main: {% if text_position == 'center' %}60%{% else %}50%{% endif %};
  }
</style>

<div {% render 'section-properties' %}>
  <div class="section-stack {% if text_position != 'center' %}section-stack--horizontal{% else %}section-stack--center{% endif %} {% if text_position == 'end' %}section-stack--reverse{% endif %}">
    {%- capture content -%}
      {%- if section.settings.subheading != blank -%}
        <p class="subheading">{{ section.settings.subheading | escape }}</p>
      {%- endif -%}

      {%- if section.settings.title != blank -%}
        <h2 class="h2 cust-faq_heading">
          {%- render 'styled-text', content: section.settings.title, text_color: section.settings.heading_color, gradient: section.settings.heading_gradient -%}
        </h2>
      {%- endif -%}

      {%if section.settings.accordion_content != blank %}
      <p class="cust-faq_content">{{- section.settings.accordion_content -}}</p>
      {% endif %}
    {%- endcapture -%}

    {%- capture subcontent -%}
      <div class="faq-availability cust-faq-availability">
        {%- if section.settings.contact-us-heading != blank or section.settings.contact_us_content != blank or section.settings.button_text != blank -%}
          <div {% render 'surface', class: 'accordion-box rounded', background: section.settings.contact_us_block_bg_color, text_color: section.settings.contact_us_block_text_color, background_fallback: 'bg-secondary' %}>
            <div class="v-stack gap-4">
            {%- if section.settings.contact-us-heading != blank or section.settings.contact_us_content != blank -%}
              <div class="v-stack">
                {% if section.settings.contact_us_heading != blank %}
                <h3 class="contact-us-heading">{{ section.settings.contact_us_heading }}</h3>
                {% endif %}

                {%- if section.settings.contact_us_content != blank -%}
                  <span class="contact-us-content">{{ section.settings.contact_us_content }}</span>
                {%- endif -%}
              </div>
            {%- endif -%}

            {%- if section.settings.button_text != blank -%}
                {% liquid
                    assign button_background = section.settings.button_background | default: 'transparent'
                    assign button_content = section.settings.button_text
                    assign button_href = section.settings.button_url
                    assign button_text_color = section.settings.button_text_color
                %}
              {% comment %}
                <a class="cuat-contact_us-btn" 
                    href="{{ button_href }}"
                    style="
                    --cust-contact-us-btn-bg-color: {{ button_background }}; 
                    --cust-contact-us-btn-text-color: {{ button_text_color }};
                    --cust-contact-us-btn-mobile-text-color: {{ section.settings.mobile_button_text_color }};
                    {% if button_background == 'transparent' or button_background == 'rgba(0,0,0,0)'%}
                        border: 1px solid rgb(var(--text-color) / .12);
                    {% endif %}"
                    
                >
                {{ button_content }}
                </a>
              {% endcomment %}
              {% render 'button', content: section.settings.button_text, href: section.settings.button_url, size: 'xl', background: section.settings.button_background, text_color: section.settings.button_text_color, style: "outline" %}
            {%- endif -%}
          </div>
        </div>
        {%- endif -%}


      </div>
    {%- endcapture -%}

    {%- if content != blank or section.blocks.size > 0 -%}
      <div class="section-stack__intro">
        <div class="v-stack gap-10">
          {%- if content != blank -%}
            <div class="prose {% if text_position == 'center' %}text-center{% endif %}">
              {{- content -}}
            </div>
          {%- endif -%}

          {%- if section.blocks.size > 0 -%}
            <div class="section-stack__main">
              <div
                class="cust-accordion__bg"
                style="
                  --cust-faq-accordion-bg-color: {{ section.settings.accordion_background | default:'transparent' }};
                  --cust-faq-accordion-text-color: {{ section.settings.accordion_text_color }}
                "
              >
                {%- for block in section.blocks -%}
                  {%- if block.settings.title != blank and block.settings.content != blank -%}
                    {%- capture accordion_content -%}
                      <div class="prose">{{ block.settings.content }}</div>
                    {%- endcapture -%}

                    {%- render 'accordion', title: block.settings.title, content: accordion_content, block: block -%}
                  {%- endif -%}
                {%- endfor -%}
              </div>
            </div>
          {%- endif -%}
        </div>
      </div>
    {%- endif -%}

    {%- if text_position != 'center' and subcontent != blank -%}
      <div class="hidden lg:block">
        {{- subcontent -}}
      </div>
    {%- endif -%}

    <div
      {% if text_position != 'center' %}
        class="lg:hidden"
      {% endif %}
    >
      {{- subcontent -}}
    </div>
  </div>
</div>

{%- comment -%}On the FAQ page, we also output the content with JSON microdata for SEO{%- endcomment -%}

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "FAQPage",
    "mainEntity": [
      {%- for block in section.blocks -%}
        {
          "@type": "Question",
          "name": {{ block.settings.title | json }},
          "acceptedAnswer": {
            "@type": "Answer",
            "text": {{ block.settings.content | json }}
          }
        }{% unless forloop.last %},{% endunless %}
      {%- endfor -%}
    ]
  }
</script>

